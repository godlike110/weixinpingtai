<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>focus_wap</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}/target/app</directory>
			<excludes>
				<exclude>WEB-INF/log4j.xml</exclude>
				<exclude>views/**</exclude>
				<exclude>static/appwap.html</exclude>
			</excludes>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>/app/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/assemble/${package.enviroment}-conf</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/assemble/${package.enviroment}-log-conf</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>/app/WEB-INF/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target/out/webapp</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>/app/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
